<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE com.atguigu.gmall.scheduled.mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-com.atguigu.gmall.scheduled.mapper.dtd">
<com.atguigu.gmall.scheduled.mapper namespace="com.atguigu.gmall.pms.com.atguigu.gmall.scheduled.mapper.SkuAttrValueMapper">

    <select id="querySaleAttrsMappingSkuId" resultType="java.util.Map">
        select GROUP_CONCAT(attr_value order by attr_id asc) attr_values,sku_id
        from pms_sku_attr_value
        <trim prefix="where" suffix="group by sku_id">
            sku_id in
            <foreach collection="skuIds" item="skuId" separator="," open="(" close=")">
                #{skuId}
            </foreach>
        </trim>
    </select>
</com.atguigu.gmall.scheduled.mapper>

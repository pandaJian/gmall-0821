<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE com.atguigu.gmall.scheduled.mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-com.atguigu.gmall.scheduled.mapper.dtd">

<com.atguigu.gmall.scheduled.mapper namespace="com.atguigu.modules.job.dao.ScheduleJobDao">

	<!-- 批量更新状态 -->
	<update id="updateBatch">
		update schedule_job set status = #{status} where job_id in
		<foreach item="jobId" collection="list"  open="(" separator="," close=")">
			#{jobId}
		</foreach>
	</update>

</com.atguigu.gmall.scheduled.mapper>